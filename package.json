{
	"name": "portfolio-v3",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 5173",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"predeploy": "npm run build && cp dist/index.html dist/404.html",
		"deploy": "gh-pages -d dist",
		"db:seed": "tsx --env-file=.env scripts/seed.ts",
		"test:setup-admin": "tsx --env-file=.env scripts/setup-test-admin.ts",
		"type-check": "tsc --noEmit",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"ci": "npm run type-check && npm run lint && npm run build && npm run test"
	},
	"dependencies": {
		"@react-three/drei": "^10.5.0",
		"@react-three/fiber": "^9.2.0",
		"@stripe/stripe-js": "^7.4.0",
		"@supabase/supabase-js": "^2.44.4",
		"framer-motion": "^12.23.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.60.0",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.6.3",
		"styled-components": "^6.1.19",
		"three": "^0.178.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@playwright/test": "^1.54.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"dotenv": "^17.2.0",
		"eslint": "^9.30.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"gh-pages": "^6.3.0",
		"globals": "^16.3.0",
		"playwright": "^1.54.1",
		"tsx": "^4.20.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.4",
		"wait-on": "^8.0.3"
	}
}

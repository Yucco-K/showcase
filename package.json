		"globals": "^16.3.0",
		"playwright": "^1.54.1",
		"tsx": "^4.20.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.4",
		"wait-on": "^8.0.3"
	},
	"description": "ドキュメント一式は以下の専用リポジトリで管理しています。",
	"main": "index.js",
	"directories": {
		"test": "tests"
	},

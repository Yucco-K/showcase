		"react-hook-form": "^7.60.0",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.6.3",
		"remark-gfm": "^4.0.1",
		"styled-components": "^6.1.19",
		"three": "^0.178.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@playwright/test": "^1.54.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"dotenv": "^17.2.0",
		"esbuild": "^0.25.8",

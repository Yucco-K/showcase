		"@tiptap/pm": "^3.0.7",
		"@tiptap/react": "^3.0.7",
		"@tiptap/starter-kit": "^3.0.7",
		"@tryfabric/martian": "^1.2.4",
		"@vercel/node": "^5.3.6",
		"chart.js": "^4.5.0",

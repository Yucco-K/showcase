{
	"name": "portfolio-v3",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 5173",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
		"preview": "vite preview",
		"predeploy": "npm run build && cp dist/index.html dist/404.html",
		"deploy": "gh-pages -d dist",
		"vercel-build": "npm run build",
		"vercel-deploy": "vercel --prod",
		"db:seed": "tsx --env-file=.env scripts/seed.ts",
		"test:setup-admin": "tsx --env-file=.env scripts/setup-test-admin.ts",
		"export:notion": "tsx --env-file=.env scripts/export-to-notion.ts",
		"export:notion:template": "tsx --env-file=.env scripts/export-to-notion-with-template.ts",
		"export:notion:all": "tsx --env-file=.env scripts/export-all-docs-to-notion.ts",
		"notion:list-pages": "tsx --env-file=.env scripts/get-notion-pages.ts",
		"notion:fix-user-guide": "tsx --env-file=.env scripts/export-user-guide-fixed.ts",
		"notion:export-tech-ja": "tsx --env-file=.env scripts/export-technical-doc-ja.ts",
		"notion:export-obsidian-workspace": "tsx --env-file=.env scripts/export-obsidian-workspace-to-notion.ts",
		"export:obsidian": "tsx --env-file=.env scripts/export-obsidian-to-notion.ts",
		"type-check": "tsc --noEmit",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"sync:gorse-products": "ts-node scripts/sync-gorse-products.ts",
		"ci": "npm run type-check && npm run lint && npm run build && npm run test"
	},
	"dependencies": {
		"@mantine/core": "^8.1.3",
